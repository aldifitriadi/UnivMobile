<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="customBackgroundColor">#FFFFFF</item>
        <item name="customPrimaryTextColor">@color/primaryText</item>
        <item name="customSecondaryTextColor">@color/secondaryText</item>
        <item name="customCardBackgroundColor">@color/cardBackground</item>
        <item name="customPrimaryImage">@color/imageBackground</item>
        <item name="customHintEditText">@color/editText</item>
    </style>

    <!-- Base application theme. -->
    <style name="NoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Manu Style  -->
    <style name="navigationTheme">

        <!--    Color of text and icon whe SELECTED   -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--    Background color when SELECTED   -->
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    <dimen name="text_20sp">20sp</dimen>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Dark Theme-->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="customBackgroundColor">@color/colorPrimaryNightBg</item>
        <item name="customPrimaryTextColor">@color/primaryTextNight</item>
        <item name="customSecondaryTextColor">@color/secondaryTextNight</item>
        <item name="customCardBackgroundColor">@color/cardBackgroundNight</item>
        <item name="customPrimaryImage">@color/imageBackgroundNight</item>
        <item name="customHintEditText">@color/editTextNight</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
