<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/customBackgroundColor"
    tools:context=".Common.User.Activities.Mahasiswa.TentangKampus">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/logouniv"
            android:background="@drawable/side_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logouniv" />

        </FrameLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil "
            android:textSize="24sp"
            android:fontFamily="@font/brandon_grotesque_black"
            android:textColor="?attr/customPrimaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/logouniv" />
        <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/textprofile"
            android:layout_height="1dp"
            android:background="?attr/customHintEditText"/>

        <TextView
            android:id="@+id/textprofile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textprofile2"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textColor="?attr/customSecondaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/textprofile"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/tentang"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang UNIVERSITAS MH THAMRIN "
            android:textSize="24sp"
            android:fontFamily="@font/brandon_grotesque_black"
            android:textColor="?attr/customPrimaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/textprofile2" />

        <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tentang"
            android:layout_height="1dp"
            android:background="?attr/customHintEditText"/>

        <TextView
            android:id="@+id/tentang2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texttentang2"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textColor="?attr/customSecondaryTextColor"
            app:layout_constraintTop_toBottomOf="@id/tentang"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>